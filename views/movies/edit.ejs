<h1>Edit Movie</h1>

<form method="post" action="/movies/<%= movie._id %>">
  <input type="hidden" name="_method" value="put">

  <label for="name">Name</label>
  <input type="text" id="name" name="name" value="<%= movie.name %>">

  <label for="description">Description</label>
  <textarea id="description" name="description"><%= movie.description %></textarea>

  <label for="image">Image</label>
  <input type="text" id="image" name="image" value="<%= movie.image %>">

  <label for="genre">Genre</label>
  <input type="text" id="genre" name="genre" value="<%= movie.genre %>">

  <label for="year">Year</label>
  <input type="text" id="year" name="year" value="<%= movie.year %>">

  <input type="submit" value="Submit">
</form>
